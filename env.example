# Application
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_DOMAIN=santrum-site.vercel.app
NODE_ENV=development

# Site Protection
SITE_PASSWORD=your_site_password_here

# Email Service (Resend or Mailgun)
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@resend.dev
# or
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_mailgun_domain_here

# Database (if needed)
DATABASE_URL=your_database_url_here

# Analytics
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=your_domain_here
# or
NEXT_PUBLIC_UMAMI_WEBSITE_ID=your_umami_website_id_here

# Microsoft Clarity (Behavioral Analytics)
NEXT_PUBLIC_CLARITY_PROJECT_ID=your_clarity_project_id_here

# External Services
NEXT_PUBLIC_CALENDAR_URL=https://cal.com/your-username
NEXT_PUBLIC_CALENDLY_URL=https://calendly.com/your-username
NEXT_PUBLIC_CONTACT_EMAIL=your-email@example.com

# Security
CSRF_SECRET=your_csrf_secret_here
SESSION_SECRET=your_session_secret_here

# Rate Limiting (Redis)
REDIS_URL=your_redis_url_here
